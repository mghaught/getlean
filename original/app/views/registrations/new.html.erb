<h2>Become a Flinger</h2>

<% form_for resource_name, resource, :url => registration_path(resource_name) do |f| -%>
  <%= f.error_messages %>
  
  <div class="right">
  
    <p><%= f.label :name %>: <%= f.text_field :name %></p>
  
    <p><%= f.label :email %>: <%= f.text_field :email %></p>

    <p><%= f.label :password %>: <%= f.password_field :password %></p>

    <p><%= f.label :password_confirmation, "Confirm pwd" %>: <%= f.password_field :password_confirmation %></p>
  
    <p>Upgrade to a <b>Pro account</b> for $5*: <%= f.check_box :pro %></p>

    <p><%= f.submit "Get Flinging" %></p>
  
    <p>
      * Pro accounts have access to more flingables
    </p>
  
  </div>
<% end -%>

<%= render :partial => "shared/devise_links" %>
